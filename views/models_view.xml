<odoo>
    <record id="models_view_list" model="ir.ui.view">
        <field name="name">models.list</field>
        <field name="model">models</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="category"/>
            </list>
        </field>
    </record>

    <record id="models_view_form" model="ir.ui.view">
        <field name="name">models.form</field>
        <field name="model">models</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id = 'models_action' model = 'ir.actions.act_window'>
        <field name = 'name'>models.action</field>
        <field name= 'res_model'>models</field>
    </record>

    <menuitem
        id = 'models_menu_item'
        name = 'Models'
        parent = 'it_assets'
        action = 'models_action'
    />
</odoo>