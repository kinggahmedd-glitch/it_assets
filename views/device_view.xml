<odoo>
    <data noupdate="1">
        <record id="seq_it_device" model="ir.sequence">
            <field name="name">IT Device Sequence</field>
            <field name="code">it.device</field>
            <field name="prefix">DEV-</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
        </record>
    </data>
    <record id = 'device_view_list' model = 'ir.ui.view'>
        <field name="name">device list</field>
        <field name="model">device</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="category"/>
                <field name="model"/>
                <field name="Purchase_Date"/>
                <field name="notes"/>
                <field name="employee_id"/>
                <field name="manufacturer_id"/>
                <field name="vendor_id"/>
                <field name="mac_address"/>
                <field name="status"/>
            </list>
        </field>
    </record>
    <record id = 'device_view_form' model = 'ir.ui.view'>
        <field name="name">device form</field>
        <field name="model">device</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <widget name="web_ribbon" title="In Maintenance"
                                bg_color="text-bg-success"
                                invisible="status != 'in_maintenance'"/>

                        <button name="action_set_active" type="object" class="btn-primary"
                                string="Active" invisible="status == 'active'"/>

                        <button name="action_set_in_maintenance" type="object" class="btn-warning"
                                string="In Maintenance" invisible="status == 'in_maintenance'"/>

                        <button name="action_set_in_active" type="object" class="btn-secondary"
                                string="Inactive" invisible="status == 'in_active'"/>
                    </header>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="category"/>
                            <field name="model"/>
                            <field name="Purchase_Date"/>
                            <field name="notes"/>
                        </group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="manufacturer_id"/>
                            <field name="vendor_id"/>
                            <field name="mac_address"/>
                        </group>
                        <notebook>
                            <page string="Specifications">
                                <field name="specs_line_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="value"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id = 'device_action' model = 'ir.actions.act_window'>
        <field name = 'name'>device action</field>
        <field name= 'res_model'>device</field>
    </record>

    <menuitem
        id = 'device_menu_item'
        name = 'Device'
        parent = 'it_assets'
        action = 'device_action'
    />
</odoo>