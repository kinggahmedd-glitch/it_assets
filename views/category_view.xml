<odoo>
    <record id="category_view_list" model="ir.ui.view">
        <field name="name">category.list</field>
        <field name="model">category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="category_view_form" model="ir.ui.view">
        <field name="name">category.form</field>
        <field name="model">category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                        <notebook>
                            <page string="Devices">
                                <field name="device_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id = 'category_action' model = 'ir.actions.act_window'>
        <field name = 'name'>category.action</field>
        <field name= 'res_model'>category</field>
    </record>

    <menuitem
        id = 'category_menu_item'
        name = 'Category'
        parent = 'it_assets'
        action = 'category_action'
    />
</odoo>